<% layout('layouts/boilerplate')%>
  <h1>Hotels : <%= Object.keys(hotels).length %> properties found</h1>
 

 <hr>
   
    <% for (let hotel of hotels){%>
      <div class="card mb-3">
          <div class="row">
              <div class="col-md-4">
                
                  <img class="img-fluid" alt="" src="https://images.pexels.com/photos/189296/pexels-photo-189296.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1">
                  
                  
              </div>
              <div class="col-md-8">
                  <div class="card-body">
                    <span class="badge rounded-pill bg-primary float-right" style=" font-size: 20px;">9.0</span>
                      <h5 class="card-title"><%= hotel.name %> </h5>
                      <p class="card-text"><%= hotel.describtion %></p>
                      <p class="card-text">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt" viewBox="0 0 16 16">
                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A32 32 0 0 1 8 14.58a32 32 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10"/>
                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4m0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6"/>
                          </svg>
                          <small class="text-muted"><%= hotel.location%></small>

                      </p>
                      <a class="btn btn-primary" href="http://localhost:3000/hotels/<%=hotel.id%>">View <%= hotel.name %></a>
                  </div>
                  
              </div>
          </div>
      </div>
      <% }%>

  
