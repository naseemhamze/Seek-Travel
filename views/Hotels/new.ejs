<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center"> Add a new hotel</h1>
    <div class="col-6 offset-3">
    <form method="post" action="/hotels"> 

      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" name="hotel[name]" id="name" placeholder="enter name">
      </div>
      <div class="mb-3">
        <label class="form-label" for="descriptoin">descriptoin</label>
        <input class="form-control" type="text" name="hotel[describtion]" id="describtion" placeholder="enter describtion">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">image</label>
        <input class="form-control" type="text" name="hotel[image]" id="image" placeholder="enter image">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">location</label>
        <input class="form-control" type="text" name="hotel[location]" id="location" placeholder="enter location">
      </div>
      <div class="mb-3">
      <button class="btn btn-success">Add hotel</button>
    </div>
      </form>
      </div>
   
  </div>
